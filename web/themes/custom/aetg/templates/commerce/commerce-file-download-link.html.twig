{#
/**
* @file
* Theme implementation for a file download link provided by commerce_file
*
* Available variables:
* - attributes: The HTML attributes for the containing element.
* - link: A link to the file.
* - file_size: The size of the file.
*
* @see template_preprocess_commerce_file_download_link()
*
* @ingroup themeable
*/
#}


<span{{ attributes }}>{{ link }}</span>

<div>
    {% if file_size %}
        {# @todo remove class before Drupal 9.0.0 #}
        <span class="file-size">{{ file_size }},</span>
    {% endif %}

    {% if file_extension %}
        <span class="file-extension">{{ file_extension }}</span>
    {% endif %}
</div>
